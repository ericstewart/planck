#!/bin/bash

# ClojureScript
cd planck-cljs
script/build
script/bundle
cd ..


# Xcode
BUILD_DIR=build
CONFIGURATION=Release

xcodebuild -project planck.xcodeproj -scheme planck -configuration $CONFIGURATION SYMROOT=$(PWD)/$BUILD_DIR

echo "Binary located at $(PWD)/$BUILD_DIR/$CONFIGURATION/planck"
